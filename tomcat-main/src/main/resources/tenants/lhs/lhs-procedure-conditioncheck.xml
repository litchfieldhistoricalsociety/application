<record id="conditioncheck" is-extension="true" generate-services-schema="true">
    <services-record-path id="lhs">conditionchecks_lhs:http://collectionspace.org/services/conditioncheck/local/lhs,conditionchecks_lhs</services-record-path>
    <section id="objectConditionInformation">
        <repeat id="conditionCheckGroupList/conditionCheckGroup">
            <field id="condition" mini="search,list,relate" ui-search="repeatable">
                <!-- removing summary config -->
            </field>
        </repeat>
        <field id="conditionLHS" ui-search="repeatable" in-title="yes" mini="summary,search,list,relate" autocomplete="vocab-condition" ui-type="enum" section="lhs"></field>
        <field id="conditionDateLHS" ui-type="date" datatype="date" ui-search="range" section="lhs"></field>
        <field id="conditionSummaryLHS" ui-search="repeatable" section="lhs"></field>
        <field id="conditionNoteLHS" ui-search="repeatable" section="lhs"></field>
        <field id="examinationFlag" ui-search="repeatable" datatype="boolean" section="lhs"></field>
        <field id="treatmentFlag" ui-search="repeatable" datatype="boolean" section="lhs"></field>
        <field id="damageFlag" ui-search="repeatable" datatype="boolean" section="lhs"></field>
        <field id="preparationFlag" ui-search="repeatable" datatype="boolean" section="lhs"></field>
    </section>
    <section id="conditionCheckInformation">
        <field id="activity" ui-search="repeatable" section="lhs"></field>
        <field id="activityStartDate" ui-type="date" datatype="date" ui-search="range" section="lhs"></field>
        <field id="activityEndDate" ui-type="date" datatype="date" ui-search="range" section="lhs"></field>
        <field id="activityReason" ui-search="repeatable" section="lhs"></field>
        <field id="activitySummary" ui-search="repeatable" section="lhs"></field>
        <field id="estimatedTime" ui-type="validated" datatype="float" ui-search="repeatable" section="lhs"></field>
        <field id="estimatedCost" ui-type="validated" datatype="float" ui-search="repeatable" section="lhs"></field>
        <field id="estimatedCostCurrency" autocomplete="vocab-currency" ui-type="enum" ui-search="repeatable" section="lhs">
            <enum>
                <default>urn:cspace:litchfieldhistoricalsociety.org:vocabularies:name(currency):item:name(USD)'US Dollar'</default>
            </enum>
        </field>
        <field id="activityTime" ui-type="validated" datatype="float" ui-search="repeatable" section="lhs"></field>
        <field id="activityCost" ui-type="validated" datatype="float" ui-search="repeatable" section="lhs"></field>
        <field id="activityCostCurrency" autocomplete="vocab-currency" ui-type="enum" ui-search="repeatable" section="lhs">
            <enum>
                <default>urn:cspace:litchfieldhistoricalsociety.org:vocabularies:name(currency):item:name(USD)'US Dollar'</default>
            </enum>
        </field>
    </section>
</record>